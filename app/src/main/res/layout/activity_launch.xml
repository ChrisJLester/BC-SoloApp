<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:text="Connect"
                android:textSize="30sp"
                android:onClick="onBtnConn"
                android:background="@drawable/rounded_button_conn"
                android:id="@+id/btnConn" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnConn"
                android:layout_centerHorizontal="true"
                android:padding="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Step 1:"
                android:textSize="40sp" />

            <ProgressBar
                android:id="@+id/spinner_conn"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_below="@+id/btnConn"
                android:layout_centerHorizontal="true"
                android:padding="50dp"/>

            <ImageView
                android:id="@+id/tick_conn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btnConn"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/tick"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:text="Arm"
                android:textSize="30sp"
                android:onClick="onBtnArm"
                android:background="@drawable/rounded_button_arm"
                android:id="@+id/btnArm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnArm"
                android:layout_centerHorizontal="true"
                android:padding="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Step 2:"
                android:textSize="40sp"/>

            <ProgressBar
                android:id="@+id/spinner_arm"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_below="@+id/btnArm"
                android:layout_centerHorizontal="true"
                android:padding="50dp"/>

            <ImageView
                android:id="@+id/tick_arm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btnArm"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/tick"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:text="Launch"
                android:textSize="30sp"
                android:onClick="onBtnLaunch"
                android:background="@drawable/rounded_button_takeoff"
                android:id="@+id/btnLaunch" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btnLaunch"
                android:layout_centerHorizontal="true"
                android:padding="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Step 3:"
                android:textSize="40sp"/>

            <ProgressBar
                android:id="@+id/spinner_launch"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_below="@+id/btnLaunch"
                android:layout_centerHorizontal="true"
                android:padding="50dp"/>

            <ImageView
                android:id="@+id/tick_launch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btnLaunch"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:src="@drawable/tick"/>

        </RelativeLayout>
    </TableRow>

</TableLayout>